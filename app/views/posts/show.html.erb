<h1><%= @post.title %></h1>
<p><%= @post.post_date %></p>
<div class="btn-group">
    <%= button_to "Edit", edit_post_path(@post)%>
    <%= button_to 'Delete', @post, :method => :delete, :confirm => "Are you sure?" %>
</div>
<br>

<% if @post.link %>
    <%= image_tag(@post.link) %><br>
<% end %>
<% if @post.images.attached?%>
    <% @post.images.each do |image| %>
        <%= image_tag(image) %>
    <% end %>
<% end %>
<br>
<h4><%= @post.content %></h4><br>

<h4><%= image_tag('view.png', width: '25px', height: '25px')%><%= @post.views %> 
<%= link_to image_tag('ThumbsUp.png', width: '25px', height: '25px'), post_likes_path(@post), method: :post %><%= @post.likes.count %></h4><br> 

<h4>COMMENTS:</h4>

<ul>   
    <%= @comments.each do |comment| %>
        <li>
            <%= comment.user.username %> - <%= comment.content %>
        </li>
    <% end %>
</ul>

<%= form_with(model: [@post, @comment = @post.comments.build(user_id: current_user.id)]) do |f| %>
    <%= f.hidden_field :user_id, value: current_user.id %>
    <%= f.hidden_field :post_id, value: @post.id %>
    <%= f.text_area :content %>
    <%= f.submit :comment %>
<% end %>