<%= render partial: 'static/errors', locals: {model: @user} %>
<%= form_with(model: @user, url: signup_path) do |f| %>
    <div class="text-center">
        <%= image_tag("avatar.jpg", alt: "User", width: 250, height: 250) %>
    </div>
    <div class="row">
        <div class="col">
            <%= f.label :last_name %>
            <%= f.text_field :last_name, required: true, class: "form-control input-lg" %><br>
        </div>
        <div class="col">
            <%= f.label :first_name %>
            <%= f.text_field :first_name, required: true, class: "form-control input-lg" %><br>
        </div>
    </div>
    <%= f.label :username %>
    <%= f.text_field :username, required: true, class: "form-control input-lg" %><br>
    <%= f.label :email %>
    <%= f.email_field :email, required: true, class: "form-control input-lg" %><br>
    <%= f.label :password %>
    <%= f.password_field :password, required: true, class: "form-control input-lg" %><br>
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, required: true, class: "form-control input-lg" %><br>
    <div class="text-center">
        <%= f.submit "Sign Up" %>
    </div>
<% end %>